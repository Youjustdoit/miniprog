.firstImg {
  display: flex;
  justify-content: center;
  margin-top: 20px;
  border-radius: 10%;
}

.imgBox {
  text-align: center;
  display: flex;
  justify-content: center;
}

.weui-article__h2 {
  text-align: center;
  font-size: 40px;
}

.imgBox2 {
  display: flex;
  float: left;
  width: 25%;
  margin: 5px;
  padding: 0;
}

.firstImg2 {
  margin: 0;
  padding: 0;
  width: 100%;
  border-radius: 30%;
}

.imgWrap {
  display: flex;
}

.article {
  text-indent: 2em;
  font-size: 20px;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-style: italic;
  background-image: url("https://www.et.ynu.edu.cn/appdd/uploads/20181020105/8/artBac.jpg");
}

.tower-swiper .tower-item {
  transform: scale(calc(0.5 + var(--index) / 10));
  margin-left: calc(var(--left) * 100rpx - 150rpx);
  z-index: var(--index);
}